<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background3"
        android:scaleType="centerCrop"/>
    <!--background as landscape+crop-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/upset_Birds"
        android:textColor="#CD3607"
        android:textSize="52sp"
        tools:visibility="visible" />
    <!--android:layout_above="@id/play"
    android:layout_below="@id/highScoreTxt"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:textSize="50sp"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:id="@+id/play"/>

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/volumeButton"
        android:text="@string/language"
        android:textColor="#000000"
        android:textSize="32sp" />

    <!--align right+margin16dp-->


    <TextView
        android:id="@+id/highScoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="315dp"
        android:layout_marginBottom="26dp"
        android:text="@string/topscore"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:id="@+id/volumeButton"
        android:src="@drawable/ic_volume_up_black_24dp"/>
    <!--create vector asset in drawable (volume)-->
</RelativeLayout>